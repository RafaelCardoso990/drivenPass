// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  credentials Credentials[]
  notes       Notes[]

  @@map("users")
}

model Credentials {
  id       Int    @id @default(autoincrement())
  title    String @unique
  url      String
  userName String
  password String
  user     Users? @relation(fields: [userId], references: [id])
  userId   Int


  @@unique([userId, title])
  @@map("credentials")
}

model Notes {
  id         Int    @id @default(autoincrement())
  title      String @unique
  annotation String
  user       Users? @relation(fields: [userId], references: [id])
  userId     Int

  @@unique([userId, title])
  @@map("notes")
}
